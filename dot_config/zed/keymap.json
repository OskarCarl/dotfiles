[
	{
		"context": "Workspace",
		"bindings": {
			"shift shift": "file_finder::Toggle",
			"ctrl-shift-g": ["task::Spawn", { "task_name": "lazygit" }]
		}
	},
	{
		"context": "!Terminal",
		"bindings": {
			"ctrl-shift-c": "editor::Copy",
			"ctrl-shift-v": "editor::Paste",
			"ctrl-shift-x": "editor::Cut",
			"ctrl-shift-z": "workspace::ToggleZoom"
		}
	},
	{
		"context": "Terminal",
		"bindings": {
			"ctrl-`": "workspace::ToggleBottomDock"
		}
	}
]
