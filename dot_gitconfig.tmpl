[user]
	email = {{ .email }}
	name = {{ .name }}
	signkey = {{ .gpgkey }}
[core]
	editor = nvim
[pull]
	rebase = true
[commit]
	gpgsign = true
[init]
	defaultBranch = main
[credential]
	helper = /usr/lib/git-core/git-credential-libsecret
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
